gg_color_hue <- function(n) {
hues = seq(15, 375, length = n + 1)
hcl(h = hues, l = 65, c = 100)[1:n]
}
colores <- gg_color_hue(9);
colores[2] <- colores[1];
graficoProyeccion <- graficoProyeccion + scale_colour_manual(values = colores);
